{% extends 'base.html.twig' %}

{% block body %}
    <header class="content__title">
        <h1>Tipos de habitación</h1>
        <div class="actions">
            <a href="{{ path('habitaciontipo_new') }}"> <span><i class="zmdi zmdi-plus zmdi-hc-fw"></i> <span>Crear tipo de habitación</span></span></a>
        </div>
    </header>
    <div class="card">
        <div class="card-block">
            <table class="table data-table" id="data-table">
                <thead class="table-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Habitacion Tipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for habitacionTipo in habitacionTipos %}
                    <tr>
                        <td><a href="{{ path('habitaciontipo_show', { 'id': habitacionTipo.id }) }}">{{ habitacionTipo.id }}</a></td>
                        <td>{{ habitacionTipo.habitacionTipo }}</td>
                        <td>
                            {#<a href="{{ path('habitaciontipo_show', { 'id': habitacionTipo.id }) }}"><span><i class="zmdi zmdi-eye zmdi-hc-fw"></i> <span>Ver</span></span></a>#}
                            <a href="{{ path('habitaciontipo_edit', { 'id': habitacionTipo.id }) }}"><span class="text-warning"><i class="zmdi zmdi-edit zmdi-hc-fw"></i> <span>Editar</span></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
