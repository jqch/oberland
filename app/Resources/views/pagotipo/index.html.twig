{% extends 'base.html.twig' %}

{% block body %}
    <header class="content__title">
        <h1>Tipos de pago</h1>
        <div class="actions">
            <a href="{{ path('pagotipo_new') }}"> <span><i class="zmdi zmdi-plus zmdi-hc-fw"></i> <span>Crear tipo de pago</span></span></a>
        </div>
    </header>
    <div class="card">
        <div class="card-block">
            <table class="table" id="data-table">
                <thead class="table-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Pagotipo</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for pagoTipo in pagoTipos %}
                    <tr>
                        <td><a href="{{ path('pagotipo_show', { 'id': pagoTipo.id }) }}">{{ pagoTipo.id }}</a></td>
                        <td>{{ pagoTipo.pagoTipo }}</td>
                        <td>
                            <a href="{{ path('pagotipo_edit', { 'id': pagoTipo.id }) }}"><span class="text-warning"><i class="zmdi zmdi-edit zmdi-hc-fw"></i> <span>Editar</span></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
