{% extends 'base.html.twig' %}

{% block body %}
    <header class="content__title">
        <h1>Género</h1>
        <div class="actions">
            <a href="{{ path('generotipo_new') }}"> <span><i class="zmdi zmdi-plus zmdi-hc-fw"></i> <span>Crear género</span></span></a>
        </div>
    </header>
    <div class="card">
        <div class="card-block">
            <table class="table data-table" id="data-table">
                <thead class="table-inverse">
                    <tr>
                        <th>Id</th>
                        <th>Genero</th>
                        <th>Detalle</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for generoTipo in generoTipos %}
                    <tr>
                        <td><a href="{{ path('generotipo_show', { 'id': generoTipo.id }) }}">{{ generoTipo.id }}</a></td>
                        <td>{{ generoTipo.genero }}</td>
                        <td>{{ generoTipo.detalle }}</td>
                        <td>
                            <a href="{{ path('generotipo_edit', { 'id': generoTipo.id }) }}"><span class="text-warning"><i class="zmdi zmdi-edit zmdi-hc-fw"></i> <span>Editar</span></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
