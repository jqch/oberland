{% extends 'base.html.twig' %}

{% block body %}
    <header class="content__title">
        <h1>Crear Huesped</h1>
        <div class="actions">

        </div>
    </header>
    <div class="card">
        <div class="card-block">
            {{ form_start(form, { 'enctype':"multipart/form-data"}) }}
