{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pago</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pago.id }}</td>
            </tr>
            <tr>
                <th>Pago</th>
                <td>{{ pago.pago }}</td>
            </tr>
            <tr>
                <th>Fecharegistro</th>
                <td>{% if pago.fechaRegistro %}{{ pago.fechaRegistro|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Horaregistro</th>
                <td>{% if pago.horaRegistro %}{{ pago.horaRegistro|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Obs</th>
                <td>{{ pago.obs }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pago_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pago_edit', { 'id': pago.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
