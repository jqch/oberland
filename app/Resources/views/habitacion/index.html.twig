{% extends 'base.html.twig' %}

{% block body %}
    <style media="screen">
        .embed-container{
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .embed-container object{
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </style>
    <h1>Habitacions list</h1>
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Tipo</th>
                    <th>Capacidad</th>
                    <th>Precio</th>
                    <th>Piso</th>
                    <th>Nrohabitacion</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for habitacion in habitacions %}
                <tr>
                    <td><a href="{{ path('habitacion_show', { 'id': habitacion.id }) }}">{{ habitacion.id }}</a></td>
                    <td>{{ habitacion.habitacionTipo.habitacionTipo }}</td>
                    <td>{{ habitacion.capacidad }}</td>
                    <td>{{ habitacion.precio }} Bs.</td>
                    <td>{{ habitacion.pisoTipo.detalle }}</td>
                    <td>{{ habitacion.nroHabitacion }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('habitacion_show', { 'id': habitacion.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('habitacion_edit', { 'id': habitacion.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <ul>
        <li>
            <a href="{{ path('habitacion_new') }}">Create a new habitacion</a>
        </li>
    </ul>
    <!--div class="embed-container">
        <object type="text/html" data="{{path('reserva_new')}}">

        </object>
    </div-->

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(function(){
            $('#menu_habitacion').addClass('navigation__active');
        })
    </script>
{% endblock %}
