{% extends 'base.html.twig' %}

{% block body %}
    <style media="screen">
        .embed-container{
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
        }

        .embed-container object{
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </style>

    <header class="content__title">
        <h1>Lista de habitaciones</h1>
        <div class="actions">
            <a href="{{ path('habitacion_new') }}"> <span><i class="zmdi zmdi-plus zmdi-hc-fw"></i> <span>Crear nueva habitaci√≥n</span></span></a>
        </div>
    </header>
    <div class="card">
        <div class="card-block">
            <div class="table-responsive">
                <table class="table" id="data-table">
                    <thead class="table-inverse">
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Capacidad</th>
                            <th>Precio</th>
                            <th>Piso</th>
                            <th>Nro habitacion</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for habitacion in habitacions %}
                        <tr>
                            <td><a href="{{ path('habitacion_show', { 'id': habitacion.id }) }}">{{ habitacion.id }}</a></td>
                            <td>{{ habitacion.habitacionTipo.habitacionTipo }}</td>
                            <td>{{ habitacion.capacidad }}</td>
                            <td>{{ habitacion.precio }} Bs.</td>
                            <td>{{ habitacion.pisoTipo.detalle }}</td>
                            <td>{{ habitacion.nroHabitacion }}</td>
                            <td>
                                <a href="{{ path('habitacion_show', { 'id': habitacion.id }) }}"><span><i class="zmdi zmdi-eye zmdi-hc-fw"></i> <span>Ver</span></span></a>
                                <a href="{{ path('habitacion_edit', { 'id': habitacion.id }) }}"><span class="text-warning"><i class="zmdi zmdi-edit zmdi-hc-fw"></i> <span>Editar</span></span></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>



    <!--div class="embed-container">
        <object type="text/html" data="{{path('reserva_new')}}">

        </object>
    </div-->

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script type="text/javascript">
        $(function(){
            $('#menu_habitacion').addClass('navigation__active');
        })
    </script>
{% endblock %}
