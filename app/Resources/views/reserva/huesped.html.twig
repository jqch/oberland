{% if huesped is not null %}
	<div class="row" style="border:solid 1px #eeeeee; padding: 10px">
		<div class="col-md-12">
			<h6>Datos del huesped</h6>
        	<hr>
		</div>
		<div class="col-md-6 text-center">
			{% if huesped.fotografia != "" %}
				<img src="{{asset('uploads/huesped-foto/' ~ huesped.fotografia)}}" width="200px" height="auto">
			{% else %}
				<img src="{{asset('uploads/huesped-foto/sin-foto.jpg')}}" width="200px" height="auto">
			{% endif %}
		</div>
		<div class="col-md-6">
			<label>Documento</label>
			<p><b>{{huesped.documento}}</b></p>
			<label>Nombre y Apellidos</label>
			<p><b>{{huesped.nombre}} {{huesped.apellidos}}</b></p>
			<label>Tel√©fono/Celular</label>
			<p><b>{{huesped.telefono}} / {{huesped.celular}}</b></p>
			<button onclick="reservar({{huesped.id}});" class="btn">Programar reserva</button>
		</div>

	</div>
{% else %}
	<div class="alert" style="background: #EEE8E8">
		<i class="zmdi zmdi-info"></i> Huesped no encontrado.
		<br>
		Ir a <a href="{{path('huesped_new')}}" class="btn-link"> Registrar huesped. </a>
	</div>
{% endif %}