{% extends 'base.html.twig' %}

{% block body %}
    <header class="content__title">
        <h1>Editar Reserva</h1>
        <div class="actions">

        </div>
    </header>

    <div class="card">
        <div class="card-block">
            <div class="row">
                <div class="col-md-12" id="divReserva" style="padding: 10px;">
                    {{ form_start(edit_form) }}
                        <div class="row">
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.fechaIngreso)}}
                                {{form_widget(edit_form.fechaIngreso)}}
                            </div>
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.fechaSalida)}}
                                {{form_widget(edit_form.fechaSalida)}}
                            </div>
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.horarioEntradaEstimado)}}
                                {{form_widget(edit_form.horarioEntradaEstimado)}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.habitacion)}}
                                {{form_widget(edit_form.habitacion, {'attr': {'class':'form-control'} })}}
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.precioActual)}} Bs.
                                {{form_widget(edit_form.precioActual, {'attr': {'class':'form-control'} })}}
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.reservaEstadoTipo)}}
                                {{form_widget(edit_form.reservaEstadoTipo, {'attr': {'class':'form-control'} })}}
                                <i class="form-group__bar"></i>
                            </div>
                            <div class="form-group col-md-6">
                                {{form_label(edit_form.obs)}}
                                {{form_widget(edit_form.obs, {'attr': {'class':'form-control'} })}}
                                <i class="form-group__bar"></i>
                            </div>
                        </div>
                        {{ form_widget(edit_form) }}
                        <input type="hidden" name="idHuesped" id="idHuesped">
                        <div class="row">
                            <div class="col-md-12" style="text-align: center">
                                <button type="submit" id="" class="btn btn-success">Guardar cambios</button>
                                <a href="{{ path('reserva_index') }}" class="btn btn-warning">Cancelar</a>
                            </div>
                        </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
